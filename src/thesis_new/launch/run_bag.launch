<launch>
  <param name="/use_sim_time" value="true" />

  <node pkg="tf" type="static_transform_publisher" name="velodyne_to_cam" 
        args="1.405 0.015 -0.695 0 0 0 velodyne32 cam_front_narrow 100" />

  <node pkg="rosbag" type="play" name="player" output="screen" 
        args=" $(env HOME)/Downloads/thesis_data.bag"/>

  <node pkg="thesis_new" type="perturbation_node.py" name="perturber" output="screen" />

  <node pkg="rviz" type="rviz" name="rviz" 
        args="-d $(env HOME)/catkin_ws/view_data.rviz" />
</launch>
